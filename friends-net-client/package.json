{
  "name": "friends-net-client",
  "version": "0.0.1",
  "author": "David Markov",
  "private": true,
  "workspaces": {
    "packages" : [
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "next packages/friends-net dev",
    "build": "next packages/firends-net build",
    "start": "next packages/firends-net start",
    "lint": "next packages/firends-net lint",
    "generate-api": "openapi-generator-cli generate -i ../api/api.yml -g typescript-axios -o packages/friends-net-api/src -p withSeparateModelsAndApi=true,apiPackage=api,modelPackage=model,withInterfaces=true,enumPropertyNaming=UPPERCASE --global-property skipFormModel=false",
    "postinstall": "yarn generate-api",
    "deduplicate": "yarn-deduplicate yarn.lock"
  },
  "prettier": {
    "printWidth": 160,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "never",
    "endOfLine": "auto"
  },
  "dependencies": {
    "typescript": "4.5.4"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "2.4.21",
    "prettier": "2.5.1",
    "yarn-deduplicate": "^3.1.0"
  }
}
